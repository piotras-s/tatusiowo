<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="tatusiowo_activity_repository.class">Tatusiowo\DemoBundle\Repository\ActivityRepository</parameter>
        <parameter key="tatusiowo_user_repository.class">Tatusiowo\DemoBundle\Repository\UserRepository</parameter>
    </parameters>

    <services>
        <service id="tatusiowo_activity_repository" class="%tatusiowo_activity_repository.class%">
            <argument>plain_value</argument>
            <argument>%parameter_name%</argument>
        </service>

        <!-- Activity repository -->
        <service id="tatusiowo_activity_repository"
                 class="Doctrine\ORM\EntityRepository"
                 factory-service="doctrine.orm.entity_manager"
                 factory-method="getRepository"
                >

            <argument>DemoBundle:Activity</argument>
        </service>

        <!-- User repository -->
        <service id="tatusiowo_user_repository"
                 class="Doctrine\ORM\EntityRepository"
                 factory-service="doctrine.orm.entity_manager"
                 factory-method="getRepository"
                >

            <argument>DemoBundle:User</argument>
        </service>
    </services>

</container>
